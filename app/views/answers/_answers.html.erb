<% if answers.count > 0 %>
    <h2>Ответы:</h2>
    <% answers.each do |answer| %>
        <div class="col-md-offset-1 col-md-10">
          <h3>
            <% if answer.solution %>
                <abbr title="Этот ответ помог решить задачу" class="initialism">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </abbr>
            <% end %>
            <%= answer.user.username %> ответил:</h3>
          <p class="text-justify">
            <%= answer.text %>
          </p>
          <p class="text-right">
            <% if user_signed_in? %>
                <% if current_user.id == @question.user_id && !@question.solved %>
                    <%= link_to 'Отметить как решение', answered_path(answer), method: :put, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-xs' %> |
                <% end %>
                <% if current_user.id == @question.user_id || current_user.id == answer.user_id %>

                    <%= link_to 'Удалить', delete_answer_path(answer), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %> |

                <% end %>
              <% end %>
          <%= answer.created_at.strftime "%F" %>
          </p>

        </div>
    <% end %>
<% else %>
    <h2>Ответов пока нет</h2>
<% end %>