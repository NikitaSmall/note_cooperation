<% if answers.count > 0 %>
    <h2>Ответы:</h2>
    <% answers.each do |answer| %>
        <div class="col-md-offset-1 col-md-6">
          <h3><%= answer.user.username %> ответил:</h3>
          <p class="text-justify">
            <%= answer.text %>
          </p>
          <p class="text-right">
            <%= answer.created_at %>
          </p>
        </div>
    <% end %>
<% else %>
    <h2>Ответов пока нет</h2>
<% end %>