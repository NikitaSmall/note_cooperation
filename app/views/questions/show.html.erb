<h2>
  <% if @question.solved %>
      <abbr title="Этот вопрос решён" class="initialism">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      </abbr>
  <% end %>
  <%= @question.title %> <p class="text-right"><%= @question.rating %></p>
</h2>
<div>
    <div class="text-left" style="float: left; width: 50px;">
      <%= link_to raise_rating_path(@question), method: :put, class: 'btn btn-success' do %>
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
      <% end %> <br />
      <%= link_to down_rating_path(@question), method: :put, class: 'btn btn-danger', style: 'margin-top: 10px;' do %>
          <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
      <% end %>
    </div>
    <div class="text-justify well" style="margin-left: 50px;">
      <%= @question.text %>
    </div>
</div>

<div class="text-right">
  <%= @question.created_at.strftime "%F" %> | <%= @question.user.username %>
</div>

<% if user_signed_in? %>
    <% if current_user.id == @question.user_id %>
        <%= link_to 'Edit', edit_question_path(@question) %> |
        <%= link_to 'Back', questions_path %>
    <% end %>
<% end %>

    <div id="answers">
      <%= render partial: "answers/answers", object: (answers=@answers) %>
    </div>
<div class="col-md-offset-1 col-md-10">
    <% if user_signed_in? %>
        <%= render partial: "answers/form" %>
    <% else %>
        <p>
          <%= link_to "Войдите", new_user_session_path, :method => :get, class: "" %> или
          <%= link_to "зарегистрируйтесь", new_user_registration_path, :method => :get, class: "" %>,
          чтобы ответить на вопрос.
        </p>
    <% end %>
</div>




